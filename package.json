{
  "name": "chart_watch_20",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.4.0",
    "@testing-library/user-event": "^7.2.1",
    "express": "^4.17.1",
    "mysql": "^2.17.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.3.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint:src": "eslint src/**/*.{js,jsx}",
    "lint:server": "eslint server/*.js server/**/*.js server/**/**/*.js",
    "test:server": "jest server --watch"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "airbnb",
      "prettier"
    ],
    "plugins": [
      "react-hooks"
    ],
    "rules": {
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".test.js",
            ".jsx"
          ]
        }
      ]
    },
    "env": {
      "browser": true,
      "es6": true
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^4.0.10",
    "lint-staged": "^10.0.0",
    "prettier": "^1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{json,css,scss,md}": [
      "prettier --single-quote --write"
    ],
    "src/**/*.{js,jsx}": [
      "eslint",
      "prettier --single-quote --write"
    ],
    "server/**/*.js": [
      "eslint",
      "prettier --single-quote --write"
    ]
  }
}
